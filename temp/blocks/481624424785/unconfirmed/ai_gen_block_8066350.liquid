{% doc %}
  @prompt
    make me a 50px height block with 3 columns. Copyright text, payment icons and language selector dropdown that we already have in the theme. where i can also change color scheme, use the built in dropdown language selector (localization) of the theme and it should have a flag , sorry i meant dropdown localization , snippet is called dropdown-localization.liquid, make the language selector work with its flag its on the header so u should be able to just find it and add it here
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-bar-{{ ai_gen_id }} {
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    gap: 20px;
  }

  .ai-footer-bar__column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    align-items: center;
  }

  .ai-footer-bar__column-{{ ai_gen_id }}:first-child {
    justify-content: flex-start;
  }

  .ai-footer-bar__column-{{ ai_gen_id }}:nth-child(2) {
    justify-content: center;
  }

  .ai-footer-bar__column-{{ ai_gen_id }}:last-child {
    justify-content: flex-end;
  }

  .ai-footer-bar__copyright-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0;
  }

  .ai-footer-bar__payment-icons-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .ai-footer-bar__localization-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
  }

  @media screen and (max-width: 749px) {
    .ai-footer-bar-{{ ai_gen_id }} {
      flex-direction: column;
      height: auto;
      padding: 15px 20px;
      gap: 12px;
    }

    .ai-footer-bar__column-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }

    .ai-footer-bar__column-{{ ai_gen_id }}:first-child,
    .ai-footer-bar__column-{{ ai_gen_id }}:last-child {
      justify-content: center;
    }
  }
{% endstyle %}

<div
  class="ai-footer-bar-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-footer-bar__column-{{ ai_gen_id }}">
    <p class="ai-footer-bar__copyright-{{ ai_gen_id }}">
      {{ block.settings.copyright_text }}
    </p>
  </div>

  <div class="ai-footer-bar__column-{{ ai_gen_id }}">
    {% if block.settings.show_payment_icons %}
      <div class="ai-footer-bar__payment-icons-{{ ai_gen_id }}">
        {% unless shop.enabled_payment_types == empty %}
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
          {% endfor %}
        {% endunless %}
      </div>
    {% endif %}
  </div>

  <div class="ai-footer-bar__column-{{ ai_gen_id }}">
    {% if block.settings.show_language_selector %}
      <div class="ai-footer-bar__localization-{{ ai_gen_id }}">
        {% render 'dropdown-localization',
          id: 'footer-bar-localization-' | append: ai_gen_id,
          localPosition: 'FooterBar',
          type: 'language',
          showCountryName: false,
          showCountryFlag: true
        %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Footer bar",
  "tag": null,
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright text",
      "default": "Â© 2025, Your Store"
    },
    {
      "type": "header",
      "content": "Payment icons"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Language selector"
    },
    {
      "type": "checkbox",
      "id": "show_language_selector",
      "label": "Show language selector",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Footer bar"
    }
  ]
}
{% endschema %}
