{% doc %}
  @prompt
    PLEASE CREATE A a marquee where i can add text, icons and images and change speed and direction and as well as change the color scheme. pls make sure its responsive on all devices
    
    it should be full screen and i should be able to change color scheme pls
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-wrapper-{{ ai_gen_id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .ai-marquee-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    width: max-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.speed }}s linear infinite;
    {% if block.settings.direction == 'right' %}
      animation-direction: reverse;
    {% endif %}
  }

  .ai-marquee-wrapper-{{ ai_gen_id }}:hover .ai-marquee-container-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-marquee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .ai-marquee-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    flex-shrink: 0;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.vertical_padding | times: 0.7 }}px 0;
    }

    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.8 }}px;
    }

    .ai-marquee-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-marquee-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.8 }}px;
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-marquee-container-{{ ai_gen_id }} {
      gap: {{ block.settings.item_spacing | times: 0.7 }}px;
    }

    .ai-marquee-item-{{ ai_gen_id }} {
      gap: {{ block.settings.content_gap | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div
