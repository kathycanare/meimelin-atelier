{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
    padding: {{ block.settings.vertical_padding }}px 0;
  }

  .ai-marquee-wrapper-{{ ai_gen_id }} {
    display: flex;
    width: fit-content;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.speed }}s linear infinite;
    {% if block.settings.direction == 'right' %}
      animation-direction: reverse;
    {% endif %}
  }

  .ai-marquee-wrapper-{{ ai_gen_id }}:hover {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    white-space: nowrap;
    padding: 0 {{ block.settings.item_spacing | divided_by: 2 }}px;
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-marquee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: currentColor;
  }

  .ai-marquee-image-{{ ai_gen_id }} {
    width: auto;
    height: {{ block.settings.image_height }}px;
    object-fit: contain;
    flex-shrink: 0;
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.8 }}px;
    }

    .ai-marquee-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-marquee-image-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }
  }
{% endstyle %}

