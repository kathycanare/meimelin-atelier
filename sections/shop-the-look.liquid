<style>
  .shop-the-look-section {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .shop-the-look__container {
    position: relative;
    width: 100%;
    margin: 0 auto;
  }

  .shop-the-look__image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .shop-the-look__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .shop-the-look__image--desktop { display: block; }
  .shop-the-look__image--mobile { display: none; }

  @media (max-width: 768px) {
    .shop-the-look__image--desktop { display: none; }
    .shop-the-look__image--mobile { display: block; }
  }

  .shop-the-look__hotspots {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .shop-the-look__hotspot {
    position: absolute;
    pointer-events: all;
    z-index: 10;
    transform: translate(-50%, -50%);
  }

  .shop-the-look__hotspot-button {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.95);
    border: 2px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 600;
    color: #000;
    box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  }

  .shop-the-look__hotspot-button--dot::after {
    content: '';
    width: 8px;
    height: 8px;
    background: #000;
    border-radius: 50%;
  }

  .shop-the-look__hotspot.is-active .shop-the-look__hotspot-button {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  .shop-the-look__hotspot.is-active .shop-the-look__hotspot-button--dot::after {
    background: #fff;
  }

  @media (max-width: 768px) {
    .shop-the-look__hotspot-button {
      width: 28px;
      height: 28px;
      font-size: 12px;
    }
  }

  /* Tooltip */
  .shop-the-look__tooltip {
    position: absolute;
    width: 280px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    padding: 16px;
    opacity: 0;
    visibility: hidden;
    transition: opacity .3s ease, visibility .3s ease;
    pointer-events: none;
    z-index: 100;
  }

  .shop-the-look__tooltip.is-visible {
    opacity: 1;
    visibility: visible;
    pointer-events: all;
  }

  /* Desktop alignments */
  .shop-the-look__tooltip--align-left   { right: calc(100% + 12px); top: 50%; transform: translateY(-50%); }
  .shop-the-look__tooltip--align-right  { left: calc(100% + 12px);  top: 50%; transform: translateY(-50%); }
  .shop-the-look__tooltip--align-top    { bottom: calc(100% + 12px); left: 50%; transform: translateX(-50%); }
  .shop-the-look__tooltip--align-bottom { top: calc(100% + 12px);    left: 50%; transform: translateX(-50%); }

  /* Mobile tooltips behave like modals */
  @media (max-width: 768px) {
    .shop-the-look__tooltip {
      position: fixed !important;
      top: 50% !important;
      left: 50% !important;
      transform: translate(-50%, -50%) !important;
      width: calc(100vw - 32px);
      max-width: 320px;
      padding: 14px;
    }
  }

  .shop-the-look__tooltip-close {
    display: none;
    position: absolute;
    top: 8px;
    right: 8px;
    font-size: 20px;
    color: #666;
    cursor: pointer;
    background: transparent;
    border: none;
  }

  @media (max-width: 768px) {
    .shop-the-look__tooltip-close { display: block; }
  }

  .shop-the-look__tooltip-image {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 4px;
    object-fit: cover;
    margin-bottom: 12px;
  }

  .shop-the-look__tooltip-title {
    font-size: 14px;
    font-weight: 600;
    margin: 0 0 8px;
  }

  .shop-the-look__tooltip-price {
    font-size: 14px;
    margin-bottom: 12px;
    color: #666;
  }

  .shop-the-look__tooltip-variants { margin-bottom: 12px; }

  .shop-the-look__tooltip-variant-label {
    font-size: 12px;
    font-weight: 600;
    margin-bottom: 6px;
  }

  .shop-the-look__tooltip-variant-select {
    width: 100%;
    padding: 8px 12px;
    border-radius: 4px;
    border: 1px solid #ddd;
    font-size: 14px;
  }

  .shop-the-look__tooltip-quantity {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .shop-the-look__tooltip-quantity-input {
    width: 60px;
    padding: 6px 8px;
    text-align: center;
    border-radius: 4px;
    border: 1px solid #ddd;
  }

  .shop-the-look__tooltip-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .shop-the-look__tooltip-button {
    padding: 10px 16px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    border: none;
    width: 100%;
  }

  .shop-the-look__tooltip-button--primary { background: #000; color: #fff; }
  .shop-the-look__tooltip-button--primary:hover { background: #333; }

  .shop-the-look__tooltip-button--secondary {
    background: transparent;
    color: #000;
    border: 1px solid #ddd;
  }

  .shop-the-look__overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    z-index: 99;
  }

  .shop-the-look__overlay.is-visible { display: block; }

  @media (min-width: 769px) {
    .shop-the-look__overlay { display: none !important; }
  }
</style>
<div class="shop-the-look-section" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="shop-the-look__container">

    <!-- Main Image -->
    <div class="shop-the-look__image-wrapper"
      style="{% if section.settings.image_height == 'custom' %}height: {{ section.settings.custom_height }}px;{% elsif section.settings.image_height == 'viewport' %}height: {{ section.settings.viewport_height }}vh;{% endif %}"
    >

      {% if section.settings.background_image %}
        <img 
          src="{{ section.settings.background_image | img_url: '2000x' }}"
          class="shop-the-look__image shop-the-look__image--desktop"
          alt="{{ section.settings.background_image.alt | escape }}"
          style="{% if section.settings.image_height != 'auto' %}object-fit: cover; height: 100%;{% endif %}"
        >
      {% endif %}

      {% if section.settings.mobile_background_image %}
        <img 
          src="{{ section.settings.mobile_background_image | img_url: '1000x' }}"
          class="shop-the-look__image shop-the-look__image--mobile"
          alt="{{ section.settings.mobile_background_image.alt | escape }}"
          style="{% if section.settings.image_height != 'auto' %}object-fit: cover; height: 100%;{% endif %}"
        >
      {% endif %}

      <!-- Hotspots -->
      <div class="shop-the-look__hotspots">
        {% for block in section.blocks %}
          {% if block.settings.product %}
            {% assign product = block.settings.product %}

            <div class="shop-the-look__hotspot"
              style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;"
              data-hotspot-id="{{ block.id }}"
              {{ block.shopify_attributes }}
            >

              <!-- Hotspot button -->
              <button 
                class="shop-the-look__hotspot-button {% if block.settings.hotspot_style == 'dot' %}shop-the-look__hotspot-button--dot{% endif %}"
                aria-label="View {{ product.title }}"
              >
                {% unless block.settings.hotspot_style == 'dot' %}
                  {{ forloop.index }}
                {% endunless %}
              </button>

              {% if block.settings.enable_tooltip %}
                <div class="shop-the-look__tooltip shop-the-look__tooltip--align-{{ block.settings.tooltip_horizontal }} shop-the-look__tooltip--align-{{ block.settings.tooltip_vertical }}"
                  data-tooltip-id="{{ block.id }}"
                >
                  <button class="shop-the-look__tooltip-close">Ã—</button>

                  {% if product.featured_image %}
                    <img 
                      src="{{ product.featured_image | img_url: '400x' }}"
                      class="shop-the-look__tooltip-image"
                      alt="{{ product.featured_image.alt | escape }}"
                    >
                  {% endif %}

                  <h3 class="shop-the-look__tooltip-title">{{ product.title }}</h3>

                  <div class="shop-the-look__tooltip-price">
                    {{ product.price | money }}
                    {% if product.compare_at_price > product.price %}
                      <s>{{ product.compare_at_price | money }}</s>
                    {% endif %}
                  </div>

                  <form class="shop-the-look__tooltip-form" action="/cart/add" method="POST">
                    {% if product.variants.size > 1 %}
                      <div class="shop-the-look__tooltip-variants">
                        <label class="shop-the-look__tooltip-variant-label">Select option</label>
                        <select name="id" class="shop-the-look__tooltip-variant-select">
                          {% for variant in product.variants %}
                            <option value="{{ variant.id }}" {% unless variant.available %}disabled{% endunless %}>
                              {{ variant.title }}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    {% else %}
                      <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                    {% endif %}

                    <div class="shop-the-look__tooltip-quantity">
                      <label class="shop-the-look__tooltip-quantity-label">Qty</label>
                      <input type="number" name="quantity" value="1" min="1" class="shop-the-look__tooltip-quantity-input">
                    </div>

                    <div class="shop-the-look__tooltip-actions">
                      <button type="submit" class="shop-the-look__tooltip-button shop-the-look__tooltip-button--primary">
                        Add to Cart
                      </button>

                      <a href="{{ product.url }}" class="shop-the-look__tooltip-button shop-the-look__tooltip-button--secondary">
                        View Product
                      </a>
                    </div>

                  </form>

                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>

  </div>
</div>

<div class="shop-the-look__overlay"></div>
<script>
(function() {
  const isMobile = window.innerWidth <= 768;
  const hotspots = document.querySelectorAll('.shop-the-look__hotspot');
  const overlay = document.querySelector('.shop-the-look__overlay');
  let activeHotspot = null;

  hotspots.forEach(hotspot => {
    const button = hotspot.querySelector('.shop-the-look__hotspot-button');
    const tooltip = hotspot.querySelector('.shop-the-look__tooltip');
    const closeBtn = tooltip ? tooltip.querySelector('.shop-the-look__tooltip-close') : null;
    const form = tooltip ? tooltip.querySelector('.shop-the-look__tooltip-form') : null;

    if (!button || !tooltip) return;

    /* MOBILE = click */
    if (isMobile) {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        if (activeHotspot === hotspot) {
          closeTooltip();
        } else {
          if (activeHotspot) closeTooltip();
          openTooltip(hotspot);
        }
      });

      if (closeBtn) {
        closeBtn.addEventListener('click', (e) => {
          e.preventDefault();
          closeTooltip();
        });
      }

      if (overlay) overlay.addEventListener('click', closeTooltip);
    }

    /* DESKTOP = hover */
    else {
      hotspot.addEventListener('mouseenter', () => openTooltip(hotspot));
      hotspot.addEventListener('mouseleave', () => closeTooltip());
    }

    /* Cart add AJAX */
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();

        const formData = new FormData(form);

        fetch('/cart/add.js', {
          method: 'POST',
          body: formData
        })
        .then(res => res.json())
        .then(() => {
          const btn = form.querySelector('[type="submit"]');
          const original = btn.textContent;
          btn.textContent = 'Added!';
          setTimeout(() => {
            btn.textContent = original;
            if (isMobile) closeTooltip();
          }, 1500);

          document.dispatchEvent(new CustomEvent('cart:updated'));
        })
        .catch(() => alert('Error adding product to cart.'));
      });
    }
  });

  function openTooltip(hotspot) {
    const tooltip = hotspot.querySelector('.shop-the-look__tooltip');
    const button = hotspot.querySelector('.shop-the-look__hotspot-button');
    if (!tooltip) return;

    activeHotspot = hotspot;
    hotspot.classList.add('is-active');
    tooltip.classList.add('is-visible');

    if (isMobile && overlay) overlay.classList.add('is-visible');
  }

  function closeTooltip() {
    if (!activeHotspot) return;
    const tooltip = activeHotspot.querySelector('.shop-the-look__tooltip');

    activeHotspot.classList.remove('is-active');
    if (tooltip) tooltip.classList.remove('is-visible');
    if (overlay) overlay.classList.remove('is-visible');

    activeHotspot = null;
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeTooltip();
  });

})();
</script>
