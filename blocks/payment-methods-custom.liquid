{% stylesheet %}
  .payment-methods-custom {
    width: 100%;
  }

  .payment-methods-custom__heading {
    text-align: center;
    font-size: var(--heading-size);
    font-weight: var(--heading-weight);
    color: var(--heading-color);
    margin-bottom: var(--heading-spacing);
    letter-spacing: 0.02em;
  }

  .payment-methods-custom__container {
    background: var(--container-bg);
    border: 1px solid var(--container-border);
    border-radius: var(--container-radius);
    padding: var(--container-padding);
    display: flex;
    justify-content: center;
  }

  .payment-methods-custom__list {
    display: flex;
    align-items: center;
    justify-content: var(--alignment);
    flex-wrap: wrap;
    gap: var(--icon-gap);
    margin: 0;
    padding: 0;
    max-width: 100%;
  }

  .payment-methods-custom__item {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--icon-box-bg);
    border: 1px solid var(--icon-box-border);
    border-radius: var(--icon-box-radius);
    padding: var(--icon-box-padding);
    min-width: 50px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .payment-methods-custom__item:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .payment-methods-custom__item img {
    max-height: var(--icon-max-height);
    width: auto;
    height: auto;
    display: block;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .payment-methods-custom__heading {
      font-size: calc(var(--heading-size) * 0.9);
    }
    
    .payment-methods-custom__container {
      padding: calc(var(--container-padding) * 0.75);
    }

    .payment-methods-custom__list {
      gap: calc(var(--icon-gap) * 0.75);
    }

    .payment-methods-custom__item {
      padding: calc(var(--icon-box-padding) * 0.75);
      min-width: 45px;
    }

    .payment-methods-custom__item img {
      max-height: calc(var(--icon-max-height) * 0.85);
    }
  }
{% endstylesheet %}

