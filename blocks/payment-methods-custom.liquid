{% stylesheet %}
  .payment-methods-custom {
    width: 100%;
  }

  .payment-methods-custom__heading {
    text-align: center;
    letter-spacing: 0.02em;
    margin: 0;
  }

  .payment-methods-custom__container {
    display: flex;
    justify-content: center;
  }

  .payment-methods-custom__list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin: 0;
    padding: 0;
    max-width: 100%;
  }

  .payment-methods-custom__item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .payment-methods-custom__item img {
    width: auto;
    height: auto;
    display: block;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .payment-methods-custom__heading {
      font-size: calc(var(--heading-size, 16px) * 0.9) !important;
    }
    
    .payment-methods-custom__container {
      padding: calc(var(--container-padding, 20px) * 0.75) !important;
    }

    .payment-methods-custom__list {
      gap: calc(var(--icon-gap, 12px) * 0.75) !important;
    }

    .payment-methods-custom__item img {
      max-height: calc(var(--icon-max-height, 30px) * 0.85) !important;
    }
  }
{% endstylesheet %}

