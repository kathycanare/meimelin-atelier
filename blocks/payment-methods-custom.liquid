{% stylesheet %}
  .payment-methods-custom {
    width: 100%;
  }

  .payment-methods-custom__container {
    display: flex;
    flex-direction: column;
  }

  .payment-methods-custom__heading-wrapper {
    display: flex;
    align-items: center;
    gap: 16px;
    width: 100%;
    margin-bottom: 0;
  }

  .payment-methods-custom__line {
    flex: 1;
    height: 1px;
    background-color: #E5E5E5;
  }

  .payment-methods-custom__heading {
    text-align: center;
    letter-spacing: 0.02em;
    margin: 0;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .payment-methods-custom__list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    margin: 0;
    padding: 0;
    max-width: 100%;
  }

  .payment-methods-custom__item {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .payment-methods-custom__item img,
  .payment-methods-custom__item svg {
    width: auto;
    height: auto;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .payment-methods-custom__heading {
      font-size: calc(var(--heading-size, 14px) * 0.9) !important;
    }
    
    .payment-methods-custom__container {
      padding: calc(var(--container-padding, 16px) * 0.85) !important;
    }

    .payment-methods-custom__list {
      gap: calc(var(--icon-gap, 10px) * 0.75) !important;
    }

    .payment-methods-custom__item img,
    .payment-methods-custom__item svg {
      max-height: calc(var(--icon-max-height, 24px) * 0.85) !important;
    }

    .payment-methods-custom__heading-wrapper {
      gap: 12px;
    }
  }
{% endstylesheet %}

