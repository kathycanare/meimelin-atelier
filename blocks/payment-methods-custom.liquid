          <img 
            src="{{ block_settings.icon_paypal | image_url: width: 120 }}" 
            alt="PayPal" 
            loading="lazy"
            width="60"
            height="auto"
            style="max-height: {{ block_settings.icon_max_height }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_google_pay != blank %}
