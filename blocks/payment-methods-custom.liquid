            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

    </ul>
  </fieldset>
</div>


{% stylesheet %}

.payment-methods-custom {
  width: 100%;
}

.payment-methods-custom__container {
  display: flex;
  flex-direction: column;
  position: relative;
}

.payment-methods-custom__legend {
  margin: 0 auto;
  background: inherit;
  white-space: nowrap;
  letter-spacing: 0.02em;
}

.payment-methods-custom__list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 0;
  padding: 0;
  list-style: none;
}

.payment-methods-custom__item img {
  width: auto;
  height: auto;
  display: block;
  object-fit: contain;
  max-height: var(--icon-max-height);
}

/* MOBILE OVERRIDE */
@media screen and (max-width: 749px) {
  .payment-methods-custom__item img {
    --icon-max-height: {{ block_settings.icon_max_height_mobile }}px !important;
  }
}

{% endstylesheet %}



