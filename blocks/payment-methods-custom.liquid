{% liquid
  assign block_settings = block.settings
  assign product = closest.product
  if request.visual_preview_mode and product == blank
    assign product = collections.all.products.first
  endif
%}

<div
  class="payment-methods-custom spacing-style"
  style="{% render 'spacing-style', settings: block_settings %}"
  {{ block.shopify_attributes }}
>
  <fieldset
    class="payment-methods-custom__container"
    style="
      background: {{ block_settings.container_bg }};
      border: 1px solid {{ block_settings.container_border }};
      border-radius: {{ block_settings.container_radius }}px;
      padding: {{ block_settings.container_padding }}px;
    "
  >

    {% if block_settings.show_heading and block_settings.heading_text != blank %}
      <legend
        class="payment-methods-custom__legend"
        style="
          font-size: {{ block_settings.heading_size }}px;
          font-weight: {{ block_settings.heading_weight }};
          color: {{ block_settings.heading_color }};
          padding: 0 12px;
        "
      >
        {{ block_settings.heading_text }}
      </legend>
    {% endif %}

    <ul
      class="payment-methods-custom__list"
      role="list"
      style="
        gap: {{ block_settings.gap }}px;
        justify-content: {{ block_settings.horizontal_alignment }};
        margin-top: {{ block_settings.heading_spacing }}px;
      "
    >

      {% if block_settings.icon_mastercard %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_mastercard | image_url: width: 120 }}"
            alt="Mastercard" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_maestro %}
