          <img 
            src="{{ block_settings.icon_maestro | image_url: width: 120 }}"
            alt="Maestro" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_paypal %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_paypal | image_url: width: 120 }}"
            alt="PayPal" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_google_pay %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_google_pay | image_url: width: 120 }}"
            alt="Google Pay" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_apple_pay %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_apple_pay | image_url: width: 120 }}"
            alt="Apple Pay" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_klarna %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_klarna | image_url: width: 120 }}"
            alt="Klarna" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_visa %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_visa | image_url: width: 120 }}"
            alt="Visa" 
            loading="lazy"
            style="--icon-max-height: {{ block_settings.icon_max_height_desktop }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_amex %}
        <li class="payment-methods-custom__item">
          <img 
            src="{{ block_settings.icon_amex | image_url: width: 120 }}"
