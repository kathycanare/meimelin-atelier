          <img 
            src="{{ block_settings.icon_google_pay | image_url: width: 120 }}" 
            alt="Google Pay" 
            loading="lazy"
            width="60"
            height="auto"
            style="max-height: {{ block_settings.icon_max_height }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_apple_pay != blank %}
