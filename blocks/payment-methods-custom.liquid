          <img 
            src="{{ block_settings.icon_maestro | image_url: width: 120 }}" 
            alt="Maestro" 
            loading="lazy"
            width="60"
            height="auto"
            style="max-height: {{ block_settings.icon_max_height }}px;"
          >
        </li>
      {% endif %}

      {% if block_settings.icon_paypal != blank %}
