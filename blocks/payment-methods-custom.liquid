    --icon-gap: {{ block_settings.gap }}px;
    --alignment: {{ block_settings.horizontal_alignment }};
    --icon-max-height: {{ block_settings.icon_max_height }}px;
    --container-bg: {{ block_settings.container_bg }};
    --container-border: {{ block_settings.container_border }};
    --container-radius: {{ block_settings.container_radius }}px;
    --container-padding: {{ block_settings.container_padding }}px;
    --icon-box-bg: {{ block_settings.icon_box_bg }};
    --icon-box-border: {{ block_settings.icon_box_border }};
    --icon-box-radius: {{ block_settings.icon_box_radius }}px;
    --icon-box-padding: {{ block_settings.icon_box_padding }}px;
    --heading-size: {{ block_settings.heading_size }}px;
    --heading-weight: {{ block_settings.heading_weight }};
    --heading-color: {{ block_settings.heading_color }};
    --heading-spacing: {{ block_settings.heading_spacing }}px;
  "
  {{ block.shopify_attributes }}
>
