        </div>
      {% endif %}

      {% if block.settings.icon_custom_2 != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_custom_2 | image_url: width: 120 }}" 
               alt="{{ block.settings.icon_custom_2_alt | default: 'Payment method' }}" 
