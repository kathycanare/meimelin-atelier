      {% endif %}

      {% if block.settings.icon_apple_pay != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_apple_pay | image_url: width: 120 }}" 
               alt="Apple Pay" 
               loading="lazy"
               width="60"
               height="auto">
        </div>
      {% endif %}

      {% if block.settings.icon_klarna != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_klarna | image_url: width: 120 }}" 
               alt="Klarna" 
               loading="lazy"
               width="60"
               height="auto">
        </div>
      {% endif %}

      {% if block.settings.icon_visa != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_visa | image_url: width: 120 }}" 
               alt="Visa" 
               loading="lazy"
               width="60"
               height="auto">
        </div>
      {% endif %}

      {% if block.settings.icon_amex != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_amex | image_url: width: 120 }}" 
               alt="American Express" 
               loading="lazy"
               width="60"
