{% comment %}
  Payment Methods Block for Shopify Product Pages
  Compatible with Horizon Atelier theme
{% endcomment %}

<style>
  .payment-methods-block-{{ block.id }} {
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px;
  }

  .payment-methods-block-{{ block.id }} .payment-methods-heading {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    letter-spacing: 0.02em;
  }

  .payment-methods-block-{{ block.id }} .payment-methods-container {
    background: {{ block.settings.container_bg }};
    border: 1px solid {{ block.settings.container_border }};
    border-radius: {{ block.settings.container_radius }}px;
    padding: {{ block.settings.container_padding }}px;
    display: flex;
    justify-content: center;
  }

  .payment-methods-block-{{ block.id }} .payment-icons-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.icon_gap }}px;
    align-items: center;
    justify-content: center;
    max-width: 100%;
  }

  .payment-methods-block-{{ block.id }} .payment-icon-box {
    background: {{ block.settings.icon_box_bg }};
    border: 1px solid {{ block.settings.icon_box_border }};
    border-radius: {{ block.settings.icon_box_radius }}px;
    padding: {{ block.settings.icon_box_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 50px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .payment-methods-block-{{ block.id }} .payment-icon-box:hover {
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .payment-methods-block-{{ block.id }} .payment-icon-box img {
    max-height: {{ block.settings.icon_max_height }}px;
    width: auto;
    height: auto;
    display: block;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .payment-methods-block-{{ block.id }} .payment-methods-heading {
      font-size: calc({{ block.settings.heading_size }}px * 0.9);
    }
    
    .payment-methods-block-{{ block.id }} .payment-methods-container {
      padding: {{ block.settings.container_padding | times: 0.75 }}px;
    }

    .payment-methods-block-{{ block.id }} .payment-icons-wrapper {
      gap: {{ block.settings.icon_gap | times: 0.75 }}px;
    }

    .payment-methods-block-{{ block.id }} .payment-icon-box {
      padding: {{ block.settings.icon_box_padding | times: 0.75 }}px;
      min-width: 45px;
    }

    .payment-methods-block-{{ block.id }} .payment-icon-box img {
      max-height: {{ block.settings.icon_max_height | times: 0.85 }}px;
    }
  }
</style>

<div class="payment-methods-block-{{ block.id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_heading and block.settings.heading_text != blank %}
    <h3 class="payment-methods-heading">{{ block.settings.heading_text }}</h3>
  {% endif %}

  <div class="payment-methods-container">
    <div class="payment-icons-wrapper">
      {% if block.settings.icon_mastercard != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_mastercard | image_url: width: 120 }}" 
               alt="Mastercard" 
               loading="lazy"
               width="60"
               height="auto">
        </div>
      {% endif %}

      {% if block.settings.icon_maestro != blank %}
        <div class="payment-icon-box">
          <img src="{{ block.settings.icon_maestro | image_url: width: 120 }}" 
